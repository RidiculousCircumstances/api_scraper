{# templates/admin/my-custom-page.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Конфигурация{% endblock %}

{% block main %}

    {% if message.isError == true %}
        <div class="alert alert-warning" role="alert">
            <span> Последняя задача завершилась с ошибкой: {{ message.message }}</span>
        </div>
    {% else %}
        <div class="alert alert-success">
            <span>{{ message.message }}</span>
        </div>
    {% endif %}

    {{ form_start(form) }}
    <div class="row">
    <div class="col-md-7 col-xxl-6">
        <br>
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_row(form.schema, { 'attr': {'class': 'form-control'} } ) }}
        </div>

        <div class="form-group">
            {{ form_row(form.method, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_row(form.secret, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_row(form.auth, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_row(form.format, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_row(form.path, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_row(form.delay, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_row(form.useProxy, { 'attr': {'class': 'form-checkbox'} }) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}