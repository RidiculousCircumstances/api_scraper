{# templates/admin/my-custom-page.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Конфигурация{% endblock %}

{% block main %}

    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-7 col-xxl-6">
                <br>
                {{ form_errors(form) }}

                <div class="form-group">
                    <div class="form-widget">
                        {{ form_row(form.schema) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-widget">
                        {{ form_row(form.format) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-widget">
                        {{ form_row(form.path) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-widget">
                        {{ form_row(form.useProxy) }}
                    </div>
                </div>
            </div>
        </div>

    {{ form_end(form) }}
{% endblock %}